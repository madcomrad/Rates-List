<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/backgroundPrimary</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="headerStyle">@style/HeaderStyle</item>
    </style>

    <style name="TextAppearanceTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearanceSubtitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearanceEditText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="HeaderStyle" parent="android:Widget.TextView">
        <item name="android:minHeight">@dimen/header_height</item>
        <item name="android:textAppearance">@style/TextAppearanceEditText</item>
        <item name="android:paddingStart">@dimen/header_padding_start</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>


</resources>
